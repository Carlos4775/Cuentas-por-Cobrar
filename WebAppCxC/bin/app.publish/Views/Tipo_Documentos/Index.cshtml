@model IEnumerable<WebAppCxC.Tipo_Documentos>

@{
    ViewBag.Title = "Index";
}

<div class="py-3">
    <h2>Documentos</h2>
</div>

<div class="pb-3">
    <p>
        @Html.ActionLink("Crear nuevo", "Create", null, new { Atributo = "valor", @class = "btn btn-secondary" })
    </p>
</div>

<div class="pb-5">
    <form method="get">
        <input type="text" id="Criterio" name="Criterio" />
        <button type="submit" id="cmdBuscar" value="Buscar" class="btn btn-primary">Buscar</button>
        @Html.ActionLink("Exporta a Excel", "exportaExcel", null, new { Atributo = "valor", @class = "btn btn-success" })
    </form>
</div>

<table class="table table-condensed table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cuenta_contable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cuenta_contable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id_tipoDocumento }, new { Atributo = "valor", @class = "btn btn-outline-success" })
            @Html.ActionLink("Detalle", "Details", new { id = item.Id_tipoDocumento }, new { Atributo = "valor", @class = "btn btn-outline-info" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_tipoDocumento }, new { Atributo = "valor", @class = "btn btn-outline-warning" })
        </td>
    </tr>
}

</table>
